<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <GridView
        android:id="@+id/gvNhaDat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:background="@drawable/gradient"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerTimKiemTinhThanh"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/custem_edittext"
        android:paddingLeft="10dp"
        android:paddingBottom="16dp"
        android:popupElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTim"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/costom_button"
        android:text="Tìm kiếm"
        app:layout_constraintStart_toEndOf="@+id/spinnerTimKiemTinhThanh"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_more" />


</androidx.constraintlayout.widget.ConstraintLayout>