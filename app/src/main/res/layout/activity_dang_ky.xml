<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DangKyActivity">

    <EditText
        android:id="@+id/edtUserNameDK"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custem_edittext"
        android:drawableLeft="@drawable/icons8_name_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNamSinhDK"
        app:layout_constraintStart_toStartOf="@+id/edtNamSinhDK"
        app:layout_constraintTop_toBottomOf="@+id/edtNamSinhDK" />

    <EditText
        android:id="@+id/edtPaswordDK"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custem_edittext"
        android:drawableStart="@drawable/icons8_password_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtUserNameDK"
        app:layout_constraintStart_toStartOf="@+id/edtUserNameDK"
        app:layout_constraintTop_toBottomOf="@+id/edtUserNameDK" />

    <EditText
        android:id="@+id/edtNhapLaiPaswordDK"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custem_edittext"
        android:drawableStart="@drawable/icons8_password_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Nhập lại Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtPaswordDK"
        app:layout_constraintStart_toStartOf="@+id/edtPaswordDK"
        app:layout_constraintTop_toBottomOf="@+id/edtPaswordDK" />

    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/costom_button"
        android:fontFamily="serif-monospace"
        android:text="Đăng ký"
        android:onClick="onRegister"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapLaiPaswordDK" />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/custem_edittext"
        android:drawableLeft="@drawable/icons8_name_tag_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Họ và Tên"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtSoDienThoai"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custem_edittext"
        android:drawableLeft="@drawable/icons8_cell_phone_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Số Điện Thoại"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtHoTen"
        app:layout_constraintStart_toStartOf="@+id/edtHoTen"
        app:layout_constraintTop_toBottomOf="@+id/edtHoTen" />

    <EditText
        android:id="@+id/edtNamSinhDK"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custem_edittext"
        android:drawableLeft="@drawable/icons8_calendar_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Năm Sinh"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtSoDienThoai"
        app:layout_constraintStart_toStartOf="@+id/edtSoDienThoai"
        app:layout_constraintTop_toBottomOf="@+id/edtSoDienThoai" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="213dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sacramento"
        android:text="FPT LAND"
        android:textColor="#FB0101"
        android:textSize="28dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="113dp"
        android:fontFamily="@font/rokkitt"
        android:text="Đăng ký"
        android:textColor="#070707"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>