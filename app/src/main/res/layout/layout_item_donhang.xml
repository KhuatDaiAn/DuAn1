<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/hoa_don"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgHinhND"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/thesinhvien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMaDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ma don hang"
        android:textColor="#020202"

        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@id/imgHinhND"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="tenGT"
        android:textColor="#020202"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgHinhND"
        app:layout_constraintTop_toBottomOf="@id/txtMaDonHang" />

    <TextView
        android:id="@+id/txtTinhThanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="tinh thanh"
        android:textColor="#040404"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/imgHinhND"
        app:layout_constraintTop_toBottomOf="@id/txtTenGT" />

    <TextView
        android:id="@+id/txtGiaTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="1.000.000.000"
        android:textColor="#FA0303"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/imgHinhND"
        app:layout_constraintTop_toBottomOf="@id/txtTinhThanh" />
</androidx.constraintlayout.widget.ConstraintLayout>